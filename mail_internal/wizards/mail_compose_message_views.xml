<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="email_compose_message_wizard_form" model="ir.ui.view" >
        <field name="name">mail.compose.message.form</field>
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
        <field name="arch" type="xml">
            <field name="is_log" position="attributes">
                <attribute name="invisibile">0</attribute>
            </field>

            <field name="is_log" position="after">
                <field name="is_internal" invisible="0"/>
                <field name="subtype_id" invisible="0"/>
            </field>

            <button name="send_mail_action" position="after">
                <button string="Log Internal" attrs="{'invisible': [('is_internal', '=', False)]}" name="send_mail_action" type="object" class="btn-primary"/>
            </button>

        </field>
    </record>

</odoo>
